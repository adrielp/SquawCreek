@model SqualCreekBusinessLayer.entites.PublicModel


@using (Html.BeginForm("PostEventRequest", "Event", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <style type="text/css">

        h1{
            color:green;
        }

    </style>

    
    <br/>
    <div class="container">
        <div class="row">

            <img src="~/Content/Images/icon-golf.png" style="float:left"/><h1>Request an Event</h1>
            <hr/>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label for="user-fname" class="col-md-2 control-label">First Name</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.SubEventRequest.ContactFirstName, new { @class = "form-control", @placeholder = "Enter your first name" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="user-lname" class="col-md-2 control-label">Last Name</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.SubEventRequest.ContactLastName, new { @class = "form-control", placeholder = "Enter Your Last Name" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="user-phone" class="col-md-2 control-label">Phone</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.SubEventRequest.ContactPhone, new { @class = "form-control", @Placeholder = "Enter your Phone Number" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="user-email" class="col-md-2 control-label">Email</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.SubEventRequest.ContactEmail, new { @class = "form-control", @placeholder = "Enter your Email Address" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="user-fname" class="col-md-2 control-label">Requested Date</label>
                    <div class="col-md-8">
                        <div class='input-group date' id='datetimepicker1' placeholder="Select a Date">
                            @Html.TextBoxFor(m => m.SubEventRequest.RequestedTime, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="user-email" class="col-md-2 control-label">Number of People</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.SubEventRequest.NumberOfGuests, new { @class = "form-control", @placeholder = "Enter a Number" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="user-email" class="col-md-2 control-label">Budget</label>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.SubEventRequest.Budget, new { @class = "form-control", @placeholder = "Enter a Number" })
                    </div>
                </div>

                <div class="form-group">
                    <label for="user-message" class="col-md-2 control-label">Tell Us About Your Event</label>
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.SubEventRequest.EventDescription, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Submit Request</button>
                    </div>
                </div>
            
            </div>
            <div class="col-md-4">
            <img src="~/Content/Images/scgc01.jpg" class="img-responsive img-rounded" /><br />
<center><img src="~/Content/Images/sq-logo.png" /></center>
<img src="~/Content/Images/sera-logo.png" class="img-responsive" />
                            Squaw Creek Golf Course<br />
                            1605 Ranch House Rd.<br />
                            Willow Park, TX 76087<br />
                <em>Telephone: </em>(817) 441-8185<br />
                <em>Fax:</em> (817) 441-8185<br />
                <em>Email:</em> contact@squawkcreek.com
            </div>
        </div>
    </div>

        
}
