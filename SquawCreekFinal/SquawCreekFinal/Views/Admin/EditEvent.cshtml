@model SqualCreekBusinessLayer.entites.EventInfo


@{
    ViewBag.Title = "Club House";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@using (Html.BeginForm("EditEvent", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">First Name</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.ContactFirstName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Last Name</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.ContactLastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Email</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Phone Number</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.ContactPhone, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Start Date and Time</label>
        <div class="col-md-9">
            <div class='input-group date' id='datetimepicker1'>
                @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">End Date and Time</label>
        <div class="col-md-9">
            <div class='input-group date' id='datetimepicker2'>
                @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Event Title</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.EventTitle, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Number of Guest</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.NumberOfGuests, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Event Discription</label>
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.EventDescription, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label for="user-fname" class="col-lg-2 control-label">Public Event</label>
        <div class="col-md-9">
            @Html.CheckBoxFor(m => m.IsPublic, new { @class = "form-control" })
        </div>
    </div>

    <button type="submit" class="btn btn-info"> Save Changes </button>

    <a href="@Url.Action("Index", "Admin")" class="btn btn-primary"> Cancel </a>
}
